<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polimi.bookshelf" >
    
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BookShelf"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateVisible"
        android:theme="@style/AppTheme">
        
        <activity
            android:name="it.polimi.bookshelf.LoginActivity"
            android:label="BookShelf" 
            android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.polimi.bookshelf.RegisterActivity"
            android:label="BookShelf" 
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="it.polimi.bookshelf.ShelfDetailActivity"
            android:label="BookShelf" 
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="it.polimi.bookshelf.BookDetailActivity"
            android:label="BookShelf" 
            android:theme="@style/AppTheme.NoActionBar"/>
        
    </application>
</manifest>
